<div class="dialog-content">
  <p>
    {{content}}
  </p>
  <label class="flexrow" style="align-items: center;">
    <input type="checkbox" name="apply-advancement" checked>
    {{localize "EH.Advancement.Confirmation.Label"}}
  </label>
</div>
<nav class="skewed">
  <ul>
    {{#each buttons}}
      <li>
        <button type="button" class="dialog-button {{cssClass}}" data-button="{{@key}}">
          {{{icon}}}
          {{{label}}}
        </button>
      </li>
    {{/each}}
  </ul>
</nav>
