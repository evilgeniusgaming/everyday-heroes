  "authors": [
    {
      "name": "Jeff ‘Arbron’ Hitchcock",
      "url": "https://github.com/arbron",
      "email": "jeff@szed.co",
      "discord": "arbron",
      "twitter": "@arbron",
      "flags": {}
    }
  ],
  "background": "systems/everyday-heroes/artwork/background.webp",
  "esmodules": [
    "./everyday-heroes.mjs"
  ],
  "styles": [
    "./everyday-heroes.css"
  ],
  "packs": [
    {
      "name": "archetypes-classes",
      "label": "Archetypes & Classes",
      "system": "everyday-heroes",
      "path": "./packs/archetypes-classes",
      "banner": "systems/everyday-heroes/artwork/interface/banners/archetypes-classes.webp",
      "type": "Item",
      "flags": {}
    },
    {
      "name": "backgrounds-professions",
      "label": "Backgrounds & Professions",
      "system": "everyday-heroes",
      "path": "./packs/backgrounds-professions",
      "banner": "systems/everyday-heroes/artwork/interface/banners/backgrounds-professions.webp",
      "type": "Item",
      "flags": {}
    },
    {
      "name": "plans-tricks",
      "label": "Plans & Tricks",
      "system": "everyday-heroes",
      "path": "./packs/plans-tricks",
      "banner": "systems/everyday-heroes/artwork/interface/banners/plans-tricks.webp",
      "type": "Item",
      "flags": {}
    },
    {
      "name": "feats",
      "label": "Feats",
      "system": "everyday-heroes",
      "path": "./packs/feats",
      "banner": "systems/everyday-heroes/artwork/interface/banners/feats.webp",
      "type": "Item",
      "flags": {}
    },
    {
      "name": "equipment",
      "label": "Equipment",
      "system": "everyday-heroes",
      "path": "./packs/equipment",
      "banner": "systems/everyday-heroes/artwork/interface/banners/weapon-armor.webp",
      "type": "Item",
      "flags": {}
    },
    {
      "name": "conditions",
      "label": "Conditions",
      "system": "everyday-heroes",
      "path": "./packs/conditions",
      "banner": "systems/everyday-heroes/artwork/interface/banners/conditions.webp",
      "type": "Item",
      "flags": {
        "everyday-heroes": {
          "autoHide": false
        }
      }
    },
    {
      "name": "npcs",
      "label": "Opponents & Allies",
      "system": "everyday-heroes",
      "path": "./packs/npcs",
      "banner": "systems/everyday-heroes/artwork/interface/banners/npcs.webp",
      "type": "Actor",
      "private": true,
      "ownership": {
        "PLAYER": "LIMITED",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    },
    {
      "name": "tables",
      "label": "Tables",
      "path": "./packs/tables",
      "type": "RollTable",
      "flags": {}
    },
    {
      "name": "rules",
      "label": "Quickstart Guide",
      "path": "./packs/rules",
      "type": "JournalEntry",
      "flags": {
        "everyday-heroes": {
          "sorting": "table-of-contents"
        }
      }
    }
  ],
  "packFolders": [
    {
      "name": "Everyday Heroes Quickstart",
      "sorting": "m",
      "color": "#c7373d",
      "packs": [
        "rules",
        "conditions",
        "tables",
        "npcs"
      ],
      "folders": [
        {
          "name": "Hero Options",
          "sorting": "m",
          "packs": [
            "archetypes-classes",
            "backgrounds-professions",
            "plans-tricks",
            "feats",
            "equipment"
          ]
        }
      ]
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "./lang/en.json",
      "flags": {}
    }
  ],
  "media": [
    {
      "type": "cover",
      "url": "https://github.com/evilgeniusgaming/everyday-heroes/blob/main/artwork/hero.jpg?raw=true",
      "flags": {}
    }
  ],
  "grid": {
    "distance": 5,
    "units": "foot"
  },
  "gridDistance": 5,
  "gridUnits": "foot",
  "primaryTokenAttribute": "attributes.hp",
  "flags": {
    "build": {
      "includes": [
        "artwork",
        "LICENSE",
        "README.md",
        "OGL.md",
        "templates"
      ]
    },
    "hotReload": {
      "extensions": ["css", "hbs", "json"],
      "paths": ["everyday-heroes.css", "templates", "lang"]
    }
  }
}
