  "version": "0.7.0",
  "compatibility": {
    "minimum": "11.315",
    "verified": "12"
  },
  "url": "https://github.com/evilgeniusgaming/everyday-heroes",
  "manifest": "https://github.com/evilgeniusgaming/everyday-heroes/releases/latest/download/system.json",
